{
  "name": "fastbit",
  "version": "1.0.1",
  "author": "minhdtb <minhdtb.83@gmail.com>",
  "description": "fastbit",
  "license": "",
  "main": "./dist/server.js",
  "scripts": {
    "build": "cross-env GH_TOKEN=ff53bf81d3dd6f8548aa2816eb777a0761ae56e4 rimraf releases && node build/build.js && electron-builder",
    "build:dir": "node build/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node build/build.js",
    "dev": "node build/dev-runner.js",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config build/webpack.server.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config build/webpack.client.config.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "fastbit",
    "appId": "com.minhdtb.fastbid",
    "directories": {
      "output": "releases"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      "static/images"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "minhdtb",
        "repo": "fastbit-public"
      }
    ]
  },
  "dependencies": {
    "axios": "^0.16.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "node.bittrex.api": "^0.6.6",
    "vue": "^2.3.3",
    "vue-electron": "^1.0.6",
    "vue-router": "^2.5.3",
    "vue-spinner": "^1.0.2",
    "vuetify": "^0.15.7",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.0.0",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.2.0",
    "cfonts": "^1.1.3",
    "chalk": "^1.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "del": "^2.2.1",
    "devtron": "^1.1.0",
    "electron": "^1.7.2",
    "electron-builder": "^19.22.1",
    "electron-debug": "^1.1.0",
    "electron-devtools-installer": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.7",
    "electron-updater": "^2.8.7",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.16.1",
    "json-loader": "^0.5.4",
    "multispinner": "^0.2.1",
    "rimraf": "^2.6.1",
    "shebang-loader": "0.0.1",
    "style-loader": "^0.18.1",
    "ts-loader": "^2.3.3",
    "typescript": "^2.4.2",
    "url-loader": "^0.5.7",
    "vue-html-loader": "^1.2.2",
    "vue-loader": "^12.2.1",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-hot-middleware": "^2.18.0"
  }
}
